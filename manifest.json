{
  "manifest_version": 3,
  "name": "Advanced Ad Blocker",
  "version": "1.0",
  "description": "Blocks ads using filter lists and user rules.",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html",
  "declarative_net_request": {
  "rule_resources": [
    {
      "id": "blocklist",
      "enabled": true,
      "path": "rules/rules.json"
    }
  ]
}
}